# Configuración para tests unitarios e integración
NODE_ENV=test
AFIP_ENTORNO=testing

# Configuración de NTP para tests
NTP_SERVER=pool.ntp.org
NTP_PORT=123
NTP_ALLOWED_DRIFT=60000
NTP_TIMEOUT=5000
NTP_CHECK_INTERVAL=3600000
NTP_ALERT_THRESHOLD=30000
NTP_MAX_FAILURES=3
NTP_SCHEDULER_ENABLED=false

# Configuración de idempotencia para tests
IDEMPOTENCY_CLEANUP_DAYS=30
IDEMPOTENCY_RETRY_DELAY=1000

# Configuración de resiliencia para tests
AFIP_TIMEOUT=30000
AFIP_MAX_RETRIES=3
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Configuración de base de datos para tests
DB_PATH=:memory:

# Configuración de logging para tests
LOG_LEVEL=error
LOG_TO_FILE=false

# Configuración de timezone para tests
TZ=America/Argentina/Buenos_Aires

# Configuración AFIP para tests (mocks)
AFIP_CUIT=20123456789
AFIP_CERT_PATH=./test-cert.crt
AFIP_KEY_PATH=./test-key.key
