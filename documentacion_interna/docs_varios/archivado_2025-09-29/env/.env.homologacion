# Configuración para tests de homologación AFIP
NODE_ENV=homologacion
AFIP_ENTORNO=homologacion

# Credenciales AFIP de homologación (requeridas para tests de homologación)
AFIP_CUIT_HOMOLOGACION=20123456789
AFIP_CERT_PATH_HOMOLOGACION=./certificados/homologacion.crt
AFIP_KEY_PATH_HOMOLOGACION=./certificados/homologacion.key

# Configuración de NTP para homologación
NTP_SERVER=pool.ntp.org
NTP_PORT=123
NTP_ALLOWED_DRIFT=60000
NTP_TIMEOUT=5000
NTP_CHECK_INTERVAL=3600000
NTP_ALERT_THRESHOLD=30000
NTP_MAX_FAILURES=3
NTP_SCHEDULER_ENABLED=true

# Configuración de idempotencia para homologación
IDEMPOTENCY_CLEANUP_DAYS=30
IDEMPOTENCY_RETRY_DELAY=1000

# Configuración de resiliencia para homologación
AFIP_TIMEOUT=30000
AFIP_MAX_RETRIES=3
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Configuración de base de datos para homologación
DB_PATH=./test-homologacion.db

# Configuración de logging para homologación
LOG_LEVEL=debug
LOG_TO_FILE=true

# Configuración de timezone para homologación
TZ=America/Argentina/Buenos_Aires

# Configuración de provincial para homologación
PROVINCIAL_MENDOZA_ENABLED=true
PROVINCIAL_MENDOZA_ENDPOINT=https://atm.mendoza.gov.ar/ws
PROVINCIAL_MENDOZA_TIMEOUT=30000
