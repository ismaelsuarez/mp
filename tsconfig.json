{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "outDir": "dist",
    "allowJs": false,
    "checkJs": false,
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "afip-local/*": ["sdk/afip.ts-main/src/*"]
    }
  },
  "include": ["src/**/*", "mp-sdk/**/*", "types/**/*", "sdk/afip.ts-main/src/**/*"],
  "exclude": [
    "node_modules",
    "out",
    "dist",
    "src/**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
