{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "outDir": "dist",
    "allowJs": false,
    "checkJs": false,
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/core/src/*"],
      "@infra/*": ["packages/infra/src/*"],
      "@shared/*": ["packages/shared/src/*"],
      "@electron/*": ["apps/electron/src/*"],
      "afip-local/*": ["sdk/afip.ts-main/src/*"]
    },
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "removeComments": true
  },
  "include": [
    "src/**/*",
    "apps/**/*",
    "packages/**/*",
    "mp-sdk/**/*",
    "types/**/*",
    "scripts/**/*",
    "sdk/afip.ts-main/src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "out",
    "coverage",
    "build",
    "src/**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
