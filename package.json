{
  "name": "tc-mp",
  "version": "1.0.1",
  "private": true,
  "description": "Aplicaci贸n de gesti贸n de pagos de Mercado Pago para TODO-Computaci贸n",
  "author": "TODO-Computaci贸n <pc@tcmza.com.ar>",
  "homepage": "https://tcmza.com.ar",
  "license": "UNLICENSED",
  "type": "commonjs",
  "main": "dist/src/main.js",
  "scripts": {
    "start": "npm run build:ts && electron .",
    "build": "npm run build:ts && electron-builder -w",
    "build:windows": "node scripts/build-windows.js",
    "build:ts": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "mp:payments:report": "node mp-sdk/report.js",
    "mp:payments:report:dist": "npm run build:ts && node dist/mp-sdk/report.js",
    "mp:account:process": "node mp-sdk/account-money-process.js",
    "mp:account:process:dist": "npm run build:ts && node dist/mp-sdk/account-money-process.js",
    "clean:credentials": "node scripts/clean-credentials.js"
  },
  "build": {
    "appId": "com.todo.tc-mp",
    "productName": "Tc-Mp",
    "artifactName": "Tc-Mp ver.${version}.${ext}",
    "asar": false,
    "compression": "store",
    "files": [
      "src/**/*",
      "public/**/*",
      "mp-sdk/**/*",
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "portable", "arch": ["x64"] }
      ],
      "publisherName": "TODO-Computacion",
      "requestedExecutionLevel": "asInvoker",
      "icon": "build/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "include": "build/installer.nsh",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  },
  "dependencies": {
    "argon2": "^0.44.0",
    "axios": "^1.10.0",
    "basic-ftp": "^5.0.5",
    "dayjs": "^1.11.13",
    "dbffile": "^1.12.0",
    "dotenv": "^17.2.0",
    "electron-store": "^8.1.0",
    "exceljs": "^4.4.0",
    "mercadopago": "^2.8.0",
    "nodemailer": "^7.0.5",
    "papaparse": "^5.5.3"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "node-cron": "^3.0.3",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
