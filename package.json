{
  "name": "mp-reports",
  "version": "1.0.1",
  "private": true,
  "type": "commonjs",
  "main": "dist/src/main.js",
  "scripts": {
    "start": "npm run build:ts && electron .",
    "build": "electron-builder -wl",
    "build:ts": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "mp:payments:report": "node mp-sdk/report.js",
    "mp:payments:report:dist": "npm run build:ts && node dist/mp-sdk/report.js",
    "mp:account:process": "node mp-sdk/account-money-process.js",
    "mp:account:process:dist": "npm run build:ts && node dist/mp-sdk/account-money-process.js"
  },
  "build": {
    "appId": "com.todo.mp",
    "productName": "Todo-computacion MP",
    "artifactName": "Todo-computacion MP ver.${version}.${ext}",
    "asar": true,
    "files": [
      "src/**/*",
      "public/**/*",
      "mp-sdk/**/*",
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "publisherName": "TODO-Computacion",
      "requestedExecutionLevel": "requireAdministrator",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "perMachine": true,
      "include": "build/installer.nsh",
      "artifactName": "Todo-computacion MP ver.${version}.${ext}",
      "installerSidebar": null
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  },
  "dependencies": {
    "axios": "^1.10.0",
    "basic-ftp": "^5.0.5",
    "dayjs": "^1.11.13",
    "dbffile": "^1.12.0",
    "dotenv": "^17.2.0",
    "electron-store": "^8.1.0",
    "exceljs": "^4.4.0",
    "mercadopago": "^2.8.0",
    "nodemailer": "^7.0.5",
    "papaparse": "^5.5.3"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "node-cron": "^3.0.3",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
